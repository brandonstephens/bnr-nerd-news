<!DOCTYPE html>
<html>
<head>
  <title>NerdNews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="nav navbar navbar-default">
    <div class="container">
      
      <%= link_to 'Nerd News', root_path, class: 'navbar-brand' %>
      
      <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-default navbar-btn' %>
      <% end %>

      <div class="navbar-right">
        <% if user_signed_in? %>
          <p class="navbar-text">Signed in as <em><%= current_user.email %></em></p>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default navbar-btn btn-xs' %>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-default navbar-btn btn-xs' %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default navbar-btn btn-xs' %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
