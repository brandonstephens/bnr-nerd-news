<div class="row">
  <div class="col-md-12">

    <% @posts.each do |post| %>
      <div class="row">

        <div class="panel panel-default">
          <div class="panel-body">
            <h2><%= link_to post.headline, post_path(post) %></h2>
          </div>
          <div class="panel-footer">
            <small>Posted by <em><%= post.user.email %></em> on <%= time_ago_in_words post.created_at %> | <%= post.comments.count %> replies</small>
          </div>
        </div>
        
      </div>
    <% end %>
    
  </div>
</div>

